<resources>

    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget" />

    <style name="Widget.CustomCardView" parent="carbon_FrameLayout">
        <item name="carbon_elevation">8dp</item>
        <item name="carbon_cornerRadius">16dp</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="MainActivity" />

    <style name="MainActivity.CustomCardView" parent="Widget.CustomCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>
